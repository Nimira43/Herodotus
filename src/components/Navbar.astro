---
import { Image } from "astro:assets";
import logo from "../images/logo.png";
---

<nav class='bg-blue-500 text-white'>
  <div
    class='max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4'
  >
    <a href='/' class='flex items-center space-x-3 rtl:space-x-reverse'>
      <Image src={logo} alt='logo' class='h-14' width={55} height={55} />
      <span
        class='self-center text-2xl font-medium whitespace-nowrap logo tracking-widest'
        >Herodotus</span
      >
    </a>
    <button
      data-collapse-toggle='navbar-default'
      type='button'
      class='inline-flex items-center p-2 w-10 h-10 justify-center text-lg bg-white text-blue-500 hover:bg-blue-200 rounded-md md:hidden cursor-pointer hover-transition'
    >
      <i class='fa-solid fa-bars'></i>
    </button>
    <div class='hidden w-full md:block md:w-auto' id='navbar-default'>
      <ul
        class='font-medium flex flex-col p-4 md:p-0 mt-4 border bg-blue-500 text-white rounded-lg md:flex-row md:space-x-8 rtl:space-x-reverse md:nt-0 md:border-0 border-white'
      >
        <li>
          <a
            href='/'
            class='block py-2 px-3 text-white rounded md:p-0 hover:text-blue-200 uppercase hover-transition'
            area-current='page'
          >
            Home
          </a>
        </li>
        <li>
          <a
            href='/articles'
            class='block py-2 px-3 text-white rounded md:p-0 hover:text-blue-200 uppercase hover-transition'
            area-current='page'
          >
            Articles
          </a>
        </li>
        <li>
          <a
            href='/about'
            class='block py-2 px-3 text-white rounded md:p-0 hover:text-blue-200 uppercase hover-transition'
            area-current='page'
          >
            About
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>
