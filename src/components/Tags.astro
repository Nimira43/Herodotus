---
const { tags } = Astro.props

interface Props {
  tags: string[]
}
---

<div class='flex flex-wrap gap-2'>
  {
    tags.map((tag: string, index: number) => (
      <span
        class={
          index % 2 === 0
            ? "px-2 py-1 bg-blue-500 text-white rounded-sm text-xs uppercase hover:opacity-85 hover-transition"
            : "px-2 py-1 bg-black text-white rounded-sm text-xs uppercase hover:opacity-85 hover-transition"
        }
      >
        <a href={"/articles/tag/" + tag}>{tag}</a>
      </span>
    ))
  }
</div>
