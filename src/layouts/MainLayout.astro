---
import './src/styles/global.css'
import { Image } from 'astro:assets'
import logo from '../images/logo.png'
import { SITE_TITLE, SITE_DESCRIPTION } from 'src/constants' 

const { title = 'Resources & Docs for Coders'} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="icon" type="image/png" href="/billy.png">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.js" integrity="sha512-BJ/5sR2hFxQTKin/55JQCcMTObShDBAmVjL/3NR/MVcrhyOazJjAgvROem03+HYyGw16SVdSfoWCFGr9syxAKA=="
	crossorigin="anonymous"
	referrerpolicy="no-referrer"></script>
  <title>{SITE_TITLE} | { title }</title>
</head>
<body>
  <nav class="bg-blue-500 text-white">
		<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
			<a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
				<Image 
					src={logo}
					alt="logo" 
					class="h-14"
					width={55}
					height={55}
				/>
				<span class="self-center text-2xl font-medium whitespace-nowrap logo tracking-widest">Herodotus</span>
			</a>
			<button
				data-collapse-toggle="navbar-default"
				type="button"
				class="inline-flex items-center p-2 w-10 h-10 justify-center text-lg bg-white text-blue-500 hover:bg-blue-200 rounded-md md:hidden cursor-pointer"
				aria-controls="navbar-default"
				aria-expanded="false"
			>
				<span class="sr-only">Open Main Menu</span>
				<i class="fa-solid fa-bars"></i>
			</button>
			<div class="hidden w-full md:block md:w-auto" id="navbar-default">
				<ul
					class="font-medium flex flex-col p-4 md:p-0 mt-4 border bg-blue-500 text-white rounded-lg md:flex-row md:space-x-8 rtl:space-x-reverse md:nt-0 md:border-0 border-white"
				>
					<li>
						<a 
							href="/"
							class="block py-2 px-3 text-white rounded md:p-0 hover:text-blue-200 uppercase"
							area-current="page"
						>
							Home
						</a>
					</li>
					<li>
						<a 
							href="/articles"
							class="block py-2 px-3 text-white rounded md:p-0 hover:text-blue-200 uppercase"
							area-current="page"
						>
							Articles
						</a>
					</li>
					<li>
						<a 
							href="/about"
							class="block py-2 px-3 text-white rounded md:p-0 hover:text-blue-200 uppercase"
							area-current="page"
						>
							About
						</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<section class="container mx-auto max-w-screen-xl mt-10 px-8">
    <slot />
  </section>

	<footer class="bg-gray-950 text-white">
		<div class="container mx-auto mt-10 max-w-screen-x1 px-8">
			<div class="grid grid-cols-1 gap-12 sm:grid-cols-2 lg:grid-cols-4">
				<div class="mt-10">
					<h3 class="text-xl font-medium mb-4">About</h3>
					<p class="text-white text-sm">
						Herodotus is a blog for the tech savvy. We publish articles, features and tutorials about the latest web development news, trends and advancements.
					</p>
				</div>
				<div class="mt-10">
					<h3 class="text-xl font-medium mb-4">Categories</h3>
					<ul class="text-white text-sm">
						<li class="mb-2">
							<a href="#">Frontend Dev</a>
						</li>
						<li class="mb-2">
							<a href="#">Backend Dev</a>
						</li>
						<li class="mb-2">
							<a href="#">Full Stack Dev</a>
						</li>
						<li class="mb-2">
							<a href="#">Game Dev</a>
						</li>
						<li class="mb-2">
							<a href="#">Linux</a>
						</li>
						<li class="mb-2">
							<a href="#">macOS</a>
						</li>
						<li class="mb-2">
							<a href="#">Windows</a>
						</li>
						<li class="mb-2">
							<a href="#">Mobile</a>
						</li>
					</ul>
				</div>
				<div class="mt-10">
					<h3 class="text-xl font-medium mb-4">Contact Us</h3>
					<ul class="text-white text-sm">
						<li class="mb-2">
							<a href="#">Email</a>
						</li>
						<li class="mb-2">
							<a href="#">Discord</a>
						</li>
						<li class="mb-2">
							<a href="#">Facebook</a>
						</li>
						<li class="mb-2">
							<a href="#">X</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</footer>
</body>
</html>