---
import './src/styles/global.css'
import Navbar from '../components/Navbar.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from 'src/constants' 

const { title = 'Resources & Docs for Coders'} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content={SITE_DESCRIPTION} />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="icon" type="image/png" href="/billy.png">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.js" integrity="sha512-BJ/5sR2hFxQTKin/55JQCcMTObShDBAmVjL/3NR/MVcrhyOazJjAgvROem03+HYyGw16SVdSfoWCFGr9syxAKA=="
	crossorigin="anonymous"
	referrerpolicy="no-referrer"></script>
  <title>{SITE_TITLE} | { title }</title>
</head>
<body>
  <Navbar />
	<section class="container mx-auto max-w-screen-xl mt-10 px-8">
    <slot />
  </section>
	<footer class="bg-gray-950 text-white">
		<div class="container mx-auto mt-10 max-w-screen-x1 px-8">
			<div class="grid grid-cols-1 gap-12 sm:grid-cols-2 lg:grid-cols-4">
				<div class="mt-10">
					<h3 class="text-xl font-medium mb-4">About</h3>
					<p class="text-white text-sm">
						Herodotus is a blog for the tech savvy. We publish articles, features and tutorials about the latest web development news, trends and advancements.
					</p>
				</div>
				<div class="mt-10">
					<h3 class="text-xl font-medium mb-4">Categories</h3>
					<ul class="text-white text-sm">
						<li class="mb-2">
							<a href="#">Frontend Dev</a>
						</li>
						<li class="mb-2">
							<a href="#">Backend Dev</a>
						</li>
						<li class="mb-2">
							<a href="#">Full Stack Dev</a>
						</li>
						<li class="mb-2">
							<a href="#">Game Dev</a>
						</li>
						<li class="mb-2">
							<a href="#">Linux</a>
						</li>
						<li class="mb-2">
							<a href="#">macOS</a>
						</li>
						<li class="mb-2">
							<a href="#">Windows</a>
						</li>
						<li class="mb-2">
							<a href="#">Mobile</a>
						</li>
					</ul>
				</div>
				<div class="mt-10">
					<h3 class="text-xl font-medium mb-4">Contact Us</h3>
					<ul class="text-white text-sm">
						<li class="mb-2">
							<a href="#">Email</a>
						</li>
						<li class="mb-2">
							<a href="#">Discord</a>
						</li>
						<li class="mb-2">
							<a href="#">Facebook</a>
						</li>
						<li class="mb-2">
							<a href="#">X</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</footer>
</body>
</html>