---
import MainLayout from '@layouts/MainLayout.astro'
import { Image } from 'astro:assets'
import error from '../images/error404.png'
---
<MainLayout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-items-center gap-7">
    <Image 
      src={error}
      alt="404"
      height={250}
      width={250}
      class="mt-10"
    />
  </div>
  <h1 class="text-5xl text-blue-500">Page Not Found</h1>
  <p class="text-2xl mb-10">Sorry, we couldn't find the page you were looking for.</p>

</MainLayout>