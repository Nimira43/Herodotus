---
import MainLayout from '../../layouts/MainLayout.astro'
import { Image } from 'astro:assets'
import place from '../../images/team-photo.jpg'
import { getCollection } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

const allBlogArticles: CollectionEntry<'blog'>[] = await getCollection('blog')

---
<MainLayout title="Leading Articles">
  <h1 class="text-2xl pb-3">Leading Articles</h1>
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {allBlogArticles.map(article => (
      <div class="max-w-md mx-auto mt-10">
        <div class="bg-white rounded-md overrflow-hidden shadow-lg">
          <a href="#">
            <img 
              src={'/images/' + article.data.image}
              alt="Article"
              class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
            />
          </a>
          <div class="p-6">
            <h2 class="text-2xl font-medium mb-2">
              <a href="#">{article.data.title}</a>
            </h2>
            <p class="grey-800 text-sm mb-4">Date</p>
            <div class="flex flex-wrap gap-2">
              <span class="px-2 py-1 bg-blue-500 text-white rounded-sm text-xs hover:opacity-90">
                <a href="#">Topic</a>
              </span>
              <span class="px-2 py-1 bg-blue-500 text-white rounded-sm text-xs hover:opacity-90">
                <a href="#">Topic</a>
              </span>
            </div>
          </div>
        </div>
      </div>
    ))} 
  </div>
  <div class="flex justify-between mt-10">
    <a 
      href="#" 
      class="inline-block bg-blue-500 px-3 py-2 hover:opacity-80 text-white rounded-md"
    >
      Previous
    </a>
    <a 
    href="#" 
      class="inline-block bg-blue-500 px-3 py-2 hover:opacity-80 text-white rounded-md"
    >
      Next
    </a>
  </div>
</MainLayout>
