---
import MainLayout from '../layouts/MainLayout.astro'
---
<MainLayout>
	<div class="grid grid-cols-1 gap-5 lg:grid-cols-2">
		<div>
			<h1 class="text-5xl font-medium mt-4 mb-8 leading-tight xl:text-6xl text-blue-500">Resources & Docs for Coders</h1>
			<form 
				id="search-form"
				class="flex items-center"
			>
				<label 
					for="search-input"
					class="sr-only"
				>
					Search
				</label>
				<div class="relative w-full">
					<input 
						type="text"
						id="query"
						name="query"
						class="bg-blue-50 border border-blue-500 text-gray-900 text-sm rounded-md block w-full p-2.5 outline-none"
						placeholder="Search resources..."
						required
					>
				</div>
				<button
					type="submit"
					class="p-2.5 ms-2 text-sm font-medium text-white bg-blue-500 rounded-md hover:bg-blue-700 outline-none"
				>
					<i class="fa-solid fa-magnifying-glass"></i>
					<span class="sr-only">Search</span>
				</button>	
			</form>
		</div>
		<div class="relative inline-block w-full sm:w-auto cursor-pointer rounded-2xl">
			<a href="#">
				<img 
					src="images/image-5.png" 
					alt="Article Image"
					class="w-full h-auto rounded-2xl"
				>
				<div class="absolute inset-0 flex flex-col items-center justify-center bg-black opacity-80 hover:opacity-85 transition duration-300 ease-in-out text-white text-center rounded-2xl">
					<div>
						<h2 class="text-2xl uppercase font-medium sm:text-3xl">Streamline Tasks, Slash Latency</h2>
						<p class="text-xl mt-4">14th July 2025</p>
						<div class="flex mt-4 justify-center">
							<span class="px-2 py-1 bg-blue-500 text-white uppercase font-medium rounded-sm text-xs mr-2">Tutorials</span>
							<span class="px-2 py-1 bg-blue-500 text-white uppercase font-medium rounded-sm text-xs mr-2">Linux</span>
						</div>
					</div>	
				</div>
			</a>
		</div>
	</div>
	<div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">

		<div class="max-w-md mx-auto mt-10">
			<div class="bg-gray-50 rounded-lg overflow-hidden shadow-lg">
				<a href="#">
					<img 
						src="images/image-7.png" 
						alt="Article Image"
						class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
					>
				</a>
				<div class="p-6">
					<h2 class="2xl font-medium mb-2">
						<a href="#">Zero-Day Attacks: Exploiting Shadows Before Defenses Wake and Respond</a>
					</h2>
					<p class="text-gray-800 text-sm mb-4">22nd June 2025</p>
					<div class="flex flex-wrap gap-2">
						<span class="px-2 py-1 bg-blue-500 text-white uppercase font-medium rounded-sm text-xs mr-2">Cyber Security</span>
						<span class="px-2 py-1 bg-blue-500 text-white uppercase font-medium rounded-sm text-xs mr-2">News</span>
					</div>
				</div>
			</div>
		</div>

		<div class="max-w-md mx-auto mt-10">
